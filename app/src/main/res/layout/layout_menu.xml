<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0000" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dip"
        android:layout_marginTop="30dip"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="筛选"
                android:textSize="30sp" />

            <TextView
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:text="确 定"
                android:gravity="center"
                android:clickable="true"
                android:layout_marginLeft="50dp"
                android:background="@drawable/orange_bg"
                android:textSize="18sp"
                android:onClick="closeMenu"
                android:textColor="@color/white"/>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/menu_rl1"
                android:clickable="true"
                android:onClick="change_rl"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="全部类型"
                    android:textSize="22sp"
                    android:layout_marginLeft="8dp"
                    />
                <ImageView
                    android:id="@+id/menu_imageview1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/checkbox_selected"
                    />
                </RelativeLayout>
        <RelativeLayout
            android:id="@+id/menu_rl2"
            android:clickable="true"
            android:onClick="change_rl"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="优惠商户"
                android:textSize="22sp"
                android:layout_marginLeft="8dp"

                />
            <ImageView
                android:id="@+id/menu_imageview2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:src="@drawable/checkbox_selected"
                android:visibility="gone"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/menu_rl3"
            android:clickable="true"
            android:onClick="change_rl"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预定商户"
                android:textSize="22sp"
                android:layout_marginLeft="8dp"
                />
            <ImageView
                android:id="@+id/menu_imageview3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:src="@drawable/checkbox_selected"
                android:visibility="gone"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/menu_rl4"
            android:clickable="true"
            android:onClick="change_rl"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="外卖商户"
                android:textSize="22sp"
                android:layout_marginLeft="8dp"
                />
            <ImageView
                android:id="@+id/menu_imageview4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:src="@drawable/checkbox_selected"
                android:visibility="gone"
                />
        </RelativeLayout>




        <com.brcorner.ddinaping.view.DianPingSlidMenu.RangeSeekBar
            android:id="@+id/rangeSeekBar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            />

    </LinearLayout>

</RelativeLayout>